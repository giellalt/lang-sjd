LEXICON Pronoun
Demonstrative ;
Determiner ;
Personal ;
Interrogative ;
Relative ;
Reflexive ;


LEXICON Demonstrative
+Pron+Dem+Disc:та dem ;
+Pron+Dem+Prox:тэ dem ;
+Pron+Dem+Dist:ту dem ;

LEXICON dem
+Sg+Nom:дт K ;
+Sg+Nom:дта K ; !yet unclear what their distribution and function is
+Sg+Gen:нн K ;
+Sg+Gen:нна K ; !yet unclear what their distribution and function is
+Sg+Acc:нн K ;
+Sg+Acc:нна K ; !yet unclear what their distribution and function is
+Sg+Ill:з K ;
+Sg+Loc:сьт K ;
+Sg+Com:йн K ;
+Sg+Abe:ннха K ;
+Sg+Ess:йн K ;
+Pl+Nom:гк K ;
+Long+Pl+Nom:гка K ; !yet unclear what their distribution and function is
+Pl+Gen:йт K ;
+Pl+Acc:йт K ;
+Pl+Ill:йт K ;
+Pl+Loc:йнэнҍ K ;
+Pl+Com:йтгуэйм K ;
+Pl+Abe:йтха K ;
+Pl+Ess:йнэнҍ K ;


LEXICON Determiner
+Pron+Det:манҍтэ K "какой / which (kind)" ;
+Pron+Det+Use/Dial:манҍтэм K "какой / which (kind)" ;
+Pron+Det:мудта K "иной / different" ;
+Pron+Det:мугка K "иной / different" ; !plural
+Pron+Det:пугк K "всё / all" ;


! Personal pronouns
! =================
! a = stem му-, то̄-, со̄-
! b = stem      тo-, сo-
! c = stem мы-, ты-, сы-
! d = stem мӣ-, тӣ-, сӣ-

LEXICON Personal
+Pron+Pers:му pers_a ;
+Pron+Pers:то̄ pers_a ;
+Pron+Pers:со̄ pers_a ;
+Pron+Pers:то pers_b ;
+Pron+Pers:со pers_b ;
+Pron+Pers:мы pers_c ;
+Pron+Pers:ты pers_c ;
+Pron+Pers:сы pers_c ;
+Pron+Pers:мӣ pers_d ;
+Pron+Pers:тӣ pers_d ;
+Pron+Pers:сӣ pers_d ;

LEXICON pers_a
+Sg+Nom:нн K ;
+Sg+Gen:н K ;
+Sg+Acc:н K ;
+Sg+Ill:ннӭ K ;
+Sg+Loc:нэсьт K ;
+Sg+Loc:ст K ;
+Sg+Com:нэнҍ K ;
+Sg+Abe:нха K ;
+Sg+Ess:ннэнҍ K ;

LEXICON pers_b
+Sg+Ill:ннӭ K ;
+Sg+Loc:ст K ;

LEXICON pers_c
+Sg+Ill+Use/Dial:ннӭ K ;
+Pl+Nom:йй K ;
+Pl+Ill:йе K ;

LEXICON pers_d
+Pl+Gen:н K ;
+Pl+Acc:нэтҍ K ;
+Pl+Loc:нэнҍ K ;
+Pl+Com:нэгуэйм K ;
+Pl+Abe:нэха K ; 
+Pl+Ess:ннэнҍ K ;


! Interrogative pronouns
! ======================
! a = stem ке̄-, мӣ-
! b = stem мэ̄-
! c = stem ма̄-
! d = stem коамп-

LEXICON Interrogative
+Pron+Interr:ке̄ interr_a ;
+Pron+Interr:мӣ interr_a ;
+Pron+Interr:мэ̄ interr_b ;
+Pron+Interr:ма̄ interr_c ;
+Pron+Interr:коампэ interr_d ;

LEXICON interr_a
+Sg+Nom: K ;
+Sg+Gen:нн K ;
+Sg+Acc:нн K ;
+Sg+Ill:з K ;
+Sg+Loc:сьт K ;
+Sg+Com:йн K ;
+Sg+Abe:ннха K ;
+Sg+Ess:йн K ;
+Pl+Nom:гк K ;
+Pl+Gen:йт K ;
+Pl+Acc:йт K ;
+Pl+Ill:йт K ;
+Pl+Loc:йн K ;
+Pl+Com:йтгуэйм K ;
+Pl+Abe:йтха K ;
+Pl+Ess:йнэнҍ K ;

LEXICON interr_b
+Sg+Gen:нн K ;
+Sg+Acc:нн K ;
+Sg+Ill:з K ;
+Sg+Com:йн K ;
+Sg+Abe:ннха K ;
+Sg+Ess:йн K ;
+Pl+Nom:гк K ;
+Pl+Gen:йт K ;
+Pl+Acc:йт K ;
+Pl+Ill:йт K ;
+Pl+Loc:йн K ;
+Pl+Com:йтгуэйм K ;
+Pl+Abe:йтха K ;
+Pl+Ess:йнэнҍ K ;

LEXICON interr_c
+Sg+Loc:сьт K ;

LEXICON interr_d
+Du+Nom: K ;
+Du+Loc:сьт K ;
+Du+Com:нҍ K ;
+Du+Abe:ха K ;
