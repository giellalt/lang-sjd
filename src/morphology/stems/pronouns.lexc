Reflexives ;


LEXICON Demonstratives
+Pron+Dem+Disc:та dem ;
+Pron+Dem+Prox:тэ dem ;
+Pron+Dem+Dist:ту dem ;

LEXICON dem
+Sg+Nom:дт K ;
+Sg+Nom:дта K ; !yet unclear what their distribution and function is
+Sg+Gen:нн K ;
+Sg+Gen:нна K ; !yet unclear what their distribution and function is
+Sg+Acc:нн K ;
+Sg+Acc:нна K ; !yet unclear what their distribution and function is
+Sg+Ill:з K ;
+Sg+Loc:сьт K ;
+Sg+Com:йн K ;
+Sg+Abe:ннха K ;
+Sg+Ess:йн K ;
+Pl+Nom:гк K ;
+Long+Pl+Nom:гка K ; !yet unclear what their distribution and function is
+Pl+Gen:йт K ;
+Pl+Acc:йт K ;
+Pl+Ill:йт K ;
+Pl+Loc:йнэнҍ K ;
+Pl+Com:йтгуэйм K ;
+Pl+Abe:йтха K ;
+Pl+Ess:йнэнҍ K ;


LEXICON Determiners
+Pron+Det:манҍтэ K "какой / which (kind)" ;
+Pron+Det:мудта K "иной / different" ;
+Pron+Det:пугк K "всё / all" ;


! Personal pronouns
! =================
! a = stem му-, то̄-, со̄-
! b = stem      тo-, сo-
! c = stem мы-, ты-, сы-
! d = stem мӣ-, тӣ-, сӣ-

LEXICON Personals
+Pron+Pers:му pers_a ;
+Pron+Pers:то̄ pers_a ;
+Pron+Pers:со̄ pers_a ;
+Pron+Pers:то pers_b ;
+Pron+Pers:со pers_b ;
+Pron+Pers:мы pers_c ;
+Pron+Pers:ты pers_c ;
+Pron+Pers:сы pers_c ;
+Pron+Pers:мӣ pers_d ;
+Pron+Pers:тӣ pers_d ;
+Pron+Pers:сӣ pers_d ;

LEXICON pers_a
+Sg+Nom:нн K ;
+Sg+Gen:н K ;
+Sg+Acc:н K ;
+Sg+Ill:ннӭ K ;
+Sg+Loc:нэсьт K ;
+Sg+Loc:ст K ;
+Sg+Com:нэнҍ K ;
+Sg+Abe:нха K ;
+Sg+Ess:ннэнҍ K ;

LEXICON pers_b
+Sg+Ill:ннӭ K ;
+Sg+Loc:ст K ;

LEXICON pers_c
+Sg+Ill:ннӭ K ;
+Pl+Nom:йй K ;
+Pl+Ill:йе K ;

LEXICON pers_d
+Pl+Gen:н K ;
+Pl+Acc:нэтҍ K ;
+Pl+Loc:нэнҍ K ;
+Pl+Com:нэгуэйм K ;
+Pl+Abe:нэха K ; 
+Pl+Ess:ннэнҍ K ;


